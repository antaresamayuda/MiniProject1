@model POS.ViewModel.MstCategoryViewModel


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <p>&nbsp;</p>
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="input-group margin">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", placeholder = "Category Name" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-primary btn-flat"><span class="fa fa-save"></span> Save</button>
                </span>
            </div>
        </div>
    </div>
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
