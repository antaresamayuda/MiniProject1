        if (sesiUser == "") {
            if (bag != 'Login') {
                window.location = "../";
            }

        }
        else
            if (sesiOutlet == "") {
                if (bag != 'Pilih Outlet') {
                    window.location = "../Login/PilihOutlet";
                }

            }
            else {
                if (sesiUser != "" && bag == 'Login') {
                    window.location = "../Employee/Index";
                }
